<div id="devise-log-in">
  <h2>Create Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "grid-x" }) do |f| %>

    <div class="cell small-12 medium-6 large-6">

      <div class="field">
        <% email_check = "✅" if @user.email? && @user.errors[:email].length == 0 %>
        <% email_check = "❗" if !@user.email? && resource.errors.any? || @user.errors[:email].length > 0 %>
        <%= f.label :email, "Email #{email_check}" %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <% zip_code_check = "✅" if @user.zip_code? && @user.errors[:zip_code].length == 0 %>
        <% zip_code_check = "❗" if !@user.zip_code? && resource.errors.any? || @user.errors[:zip_code].length > 0 %>
        <%= f.label :zip_code, "Zip code #{zip_code_check}" %>
        <%= f.text_field :zip_code %>
      </div>

      <div class="field">
        <% password_check = "❗" if resource.errors.any? %>
        <%= f.label :password, "Password #{password_check}" %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Password confirmation #{password_check}" %>
        <%= f.password_field :password_confirmation %>
      </div>

    </div>

    <div class="cell small-12 medium-6 large-6">

      <div class="field">
        <% user_name_check = "✅" if @user.user_name? && @user.errors[:user_name].length == 0 %>
        <% user_name_check = "❗" if !@user.user_name? && resource.errors.any? || @user.errors[:user_name].length > 0 %>
        <%= f.label :user_name, "User name #{user_name_check}" %>
        <%= f.text_field :user_name %>
      </div>

      <div class="field">
        <% blurb_check = "✅" if @user.blurb? %>
        <% blurb_check = "❗" if !@user.blurb? && resource.errors.any? %>
        <%= f.label :blurb, "Write a blurb for your profile #{blurb_check}" %>
        <%= f.text_area :blurb %>
      </div>

      <div class="field">
        <% profile_photo_check = "✅" if @user.profile_photo? %>
        <% profile_photo_check = "❗" if !@user.profile_photo? && resource.errors.any? %>
        <%= f.label :profile_photo, "📎 Click here to upload a profile picture #{profile_photo_check}", :class => "file"%>
        <%= f.file_field :profile_photo %>
        <%= f.hidden_field :profile_photo_cache %>
      </div>

      <div class="actions">
        <%= f.submit "Create your new account", :id => 'button' %>
      </div>

    </div>
    <%= render "devise/shared/error_messages", resource: resource %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
