<div id="devise-log-in">
  <h2>Log in to YardSale!</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => "grid-x" }) do |f| %>

    <div class="cell small-12 medium-6 large-6">

      <div class="field">
        <% email_check = "❓" if flash[:alert].present? %>
        <%= f.label :email, "Enter your email: #{email_check}" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <% password_check = "❓" if flash[:alert].present? %>
        <%= f.label :password, "Enter your password: #{password_check}" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in to YardSale", :id => 'button' %>
      </div>

    </div>

    <div class="cell small-12 medium-6 large-6">

      <%= render "devise/shared/links" %>

      <div id="dev-info">
        <h6>Report all bugs and inappropriate content to YardSale's developer and administrator:</h6>
        <%= mail_to "benfairbank26@gmail.com", 'Benjamin Fairbank',
          subject: "About YardSale: I would like to report an issue.",
          body: "Dear Mr. Fairbank,\n\n(Please describe the issue in detail as best you can.  Thank you for your feedback!)"
        %>
      </div>

    </div>
  <% end %>

</div>
